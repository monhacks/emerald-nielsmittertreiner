const LOCALID_BUGCATCHER = 4
const LOCALID_ZIGZAGOON = 5
const LOCALID_AIRLOCK_GRUNT_1 = 6
const LOCALID_AIRLOCK_GRUNT_2 = 7
const LOCALID_RICH_BOY = 8

mapscripts Route403_MapScripts {}

