script Route403_EventScript_BugCatcher {
    lock
    msgbox("I'm training my ZIGZAGOON\n"
           "so we can challenge PHYLLOS\l"
           "one day!", MSGBOX_NPC)
    applymovement(LOCALID_BUGCATCHER, Route403_Movement_YoungsterJumpInPlace)
    applymovement(LOCALID_ZIGZAGOON, Route403_Movement_ZigzagoonJumpInPlace)
    delay(8)
    playmoncry(SPECIES_ZIGZAGOON, 0)
    waitmovement(0)
    release
    end
}

script Route403_EventScript_Zigzagoon {
    lock
    faceplayer
    playmoncry(SPECIES_ZIGZAGOON, 0)
    waitmoncry
    applymovement(LOCALID_ZIGZAGOON, Common_Movement_FaceRight)
    waitmovement(0)
    release
    end
}

script Route403_EventScript_RichBoy {
    lock
    applymovement(LOCALID_RICH_BOY, Route403_Movement_RichBoyJumpInPlace)
    waitmovement(0)
    loadspeechtail(FALSE, LOCALID_RICH_BOY)
    msgbox("Get outta here!\n"
           "You blue collar scum!\p"
           "My daddy's boat is about to arrive!")
    destroyspeechtail
    closemessage
    if (var(VAR_FIRWEALD_CITY_STATE) > 0) {
        applymovement(LOCALID_AIRLOCK_GRUNT_1, Route403_Movement_TeamAirlockGrunt1WalkBack)
        applymovement(LOCALID_RICH_BOY, Route403_Movement_RichBoyWalkToMurenaCity)
        waitmovement(0)
        applymovement(LOCALID_AIRLOCK_GRUNT_1, Route403_Movement_TeamAirlockGruntsWalkToMurenaCity)
        applymovement(LOCALID_AIRLOCK_GRUNT_2, Route403_Movement_TeamAirlockGruntsWalkToMurenaCity)
        waitmovement(0)
        removeobject(LOCALID_RICH_BOY)
        removeobject(LOCALID_AIRLOCK_GRUNT_1)
        removeobject(LOCALID_AIRLOCK_GRUNT_2)
    }
    release
    end
}

script Route403_EventScript_Grunt {
    msgbox("We got some business here, so\n"
