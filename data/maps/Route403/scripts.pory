    end
}

movement Route403_Movement_YoungsterJumpInPlace {
    face_left
    jump_in_place_left * 3
}

movement Route403_Movement_ZigzagoonJumpInPlace {
    jump_in_place_right * 3
}

movement Route403_Movement_RichBoyJumpInPlace {
    jump_in_place_right * 2
}

movement Route403_Movement_TeamAirlockGrunt1WalkBack {
    walk_right
    walk_down
    face_up
}

movement Route403_Movement_RichBoyWalkToMurenaCity {
    walk_right * 7
}

movement Route403_Movement_TeamAirlockGruntsWalkToMurenaCity {
    walk_right * 6
}

